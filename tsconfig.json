{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./*.js", "src/**/*.ts", "test/**/*.ts", "api/**/*.ts"]
}
