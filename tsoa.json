{
  "entryFile": "src/app.ts",
  "controllerPathGlobs": ["src/swagger-controllers/**/*.ts"],
  "noImplicitAdditionalProperties": "silently-remove-extras",
  "spec": {
    "info": {
      "title": "Movies API"
    },
    "outputDirectory": "swagger",
    "specVersion": 3,
    "securityDefinitions": {
      "bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "security": [
      {
        "bearer": []
      }
    ]
  },
  "routes": {
    "routesDir": "src/swagger"
  }
}
