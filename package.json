{
  "name": "express-api-starter-ts",
  "version": "1.2.0",
  "description": " A basic starter for an express.js API with Typescript",
  "main": "api/index.ts",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register api/index.ts",
    "dev": "nodemon --exec \"ts-node -r tsconfig-paths/register\" api/index.ts",
    "build": "tsc && tsc-alias -p tsconfig.json",
    "start:dist": "node dist/api/index.js",
    "lint": "eslint --fix src test",
    "lint:fix": "prettier --write src && eslint --fix src",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "tsoa:build": "npx tsoa route &&  npx tsoa spec"
  },
  "keywords": [],
  "author": "CJ R. <cj@null.computer> (https://w3cj.now.sh)",
  "repository": {
    "type": "git",
    "url": "https://github.com/w3cj/express-api-starter.git"
  },
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "i18n": "^0.15.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash.merge": "^4.6.2",
    "mongoose": "^8.15.0",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.20",
    "@types/i18n": "^0.13.12",
    "@types/jest": "^29.5.13",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash.merge": "^4.6.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.5",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.5.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsoa": "^6.6.0",
    "typescript": "^5.6.3"
  }
}
